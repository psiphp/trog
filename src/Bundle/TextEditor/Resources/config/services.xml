<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="trog.controller.text_editor" class="Trog\Bundle\TextEditor\Controller\EditorController">
            <argument type="service" id="cmf_resource.registry" />
            <argument type="service" id="templating" />
            <argument type="service" id="router" />
        </service>

        <service id="trog_text_editor.description.enhancer" class="Trog\Bundle\TextEditor\Resource\TextEditorEnhancer">
            <argument type="service" id="router" />
            <argument type="service" id="cmf_resource.registry" />
            <tag name="psi_description.enhancer" alias="text_editor" />
        </service>
    </services>
</container>
