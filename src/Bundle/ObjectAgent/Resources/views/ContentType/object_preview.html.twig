<div class="ui grid attached segment">
    <div class="row">
        <div class="eight wide column">
            <table class="ui definition table">
                <thead>
                    <tr>
                        <th>{{ 'property'|trans() }}</th>
                        <th>{{ 'value'|trans() }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% include "@TrogContentType/_preview_description.html.twig" %}
                </tbody>
            </table>
        </div>
        <div class="four wide column">
            {% if description.has('std.image') %}
                <img class="ui inline big spaced bordered rounded image" src="{{ description.get('std.image').value | imagine_filter('preview') }}" />
            {% endif %}
        </div>
    </div>
</div>

