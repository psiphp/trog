<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="trog_resource_browser.controller" class="Trog\Bundle\ResourceBrowser\Controller\BrowserController">
            <argument type="service" id="cmf_resource.registry" />
            <argument type="service" id="templating" />
            <argument type="service" id="session" />
            <argument type="service" id="trog_resource_browser.view_registry" />
        </service>

        <service id="trog_resource_browser.view_registry" class="Trog\Bundle\ResourceBrowser\Browser\ViewRegistry" />
        <service id="trog_resource_browser.filter_registry" class="Psi\Component\ResourceBrowser\FilterRegistry" />

        <service id="trog_resource_browser.filter.regex" class="Trog\Bundle\ResourceBrowser\Browser\Filter\RegexFilter">
            <argument>{%psi_content_type.phpcr_namespace_prefix%:.*}</argument>
            <tag name="trog_resource_browser.filter" />
        </service>

    </services>

</container>
