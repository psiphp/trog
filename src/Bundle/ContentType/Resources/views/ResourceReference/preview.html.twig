<div class="ui grid">
    <div class="row">
        <div class="four wide column">
            {% if description.has('std.image') %}
                <img class="ui inline big spaced image" src="{{ description.get('std.image') | trog_media_path() | imagine_filter('preview') }}" />
            {% endif %}
        </div>
        <div class="eight wide column">
            <table class="ui definition table">
                <thead>
                    <tr>
                        <th>{{ 'property'|trans() }}</th>
                        <th>{{ 'value'|trans() }}</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
